{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@interface/entities": ["./apps/common/interfaces/interface/entities"],
      "@interface/controllers": [
        "./apps/common/interfaces/interface/controller"
      ],
      "@entities": ["./apps/api/src/app/typeorm/entities"],
      "@services": ["./apps/api/src/app/service/database/rdms/entities"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
